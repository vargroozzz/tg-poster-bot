    "date-fns-tz": "^3.2.0"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "nodemon": "^3.1.9",
    "@types/node": "^22.10.5",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prettier": "^3.4.2",
    "vitest": "^1.6.0"
